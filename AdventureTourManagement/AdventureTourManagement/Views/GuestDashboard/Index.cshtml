@model AdventureTourManagement.ViewModels.VMActivity
<style>
    .link {
        width: 100%;
        padding: 10px;
        font-size: 15px;
    }

    .show-all {
        padding: 20px 0;
        border-top: 1px solid #ddd;
    }
</style>
@{
    ViewBag.Title = "Guest Dashboard";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 style="text-align:center"><b>Activity Trends</b></h3>
    </div>
</div>
@using (Html.BeginForm("FilterActivities", "GuestDashboard", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-8">
            @Html.DropDownListFor(x => x.RegionSelected, new SelectList(Model.Regions,"Value","Text"))
        </div>
        <div class="col-md-4">
            <button type="submit">Filter</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <h3> Recommended Activities </h3>
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        var data = Model.Activities;

                        if (data != null)
                        {
                            if (data.Any(x => x.Key == "RA"))
                            {
                                var raData = data["RA"];

                                foreach (var item in raData)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink(item.activity_name, "FetchActivity", new { activity_id = item.activity_id }, new { @class = "btn btn-primary btn-xs link", @data })
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="3" scope="col">
                            <h3> Seasonal Activities </h3>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (data != null)
                        {
                            if (data.Any(x => x.Key == "SA"))
                            {
                                var raData = data["SA"];

                                foreach (var item in raData)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink(item.activity_name, "FetchActivity", new { item.activity_id }, new { @class = "btn btn-primary btn-xs link" })
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="3">
                            <h3> Recently Bought Activities </h3>
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        if (data != null)
                        {
                            if (data.Any(x => x.Key == "RB"))
                            {
                                var raData = data["RB"];

                                foreach (var item in raData)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink(item.activity_name, "FetchActivity", new { item.activity_id }, new { @class = "btn btn-primary btn-xs link" })
                                        </td>
                                    </tr>
                                }

                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="show-all">
        <table>
            <tr>

                <td>
                    @Html.ActionLink("Show All Activities", "FetchAllActivity", null, new { @class = "btn btn-info" })
                </td>

            </tr>
        </table>
    </div>
                        }
