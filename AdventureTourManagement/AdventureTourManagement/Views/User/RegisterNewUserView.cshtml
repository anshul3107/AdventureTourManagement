@model AdventureTourManagement.ViewModels.VmUser

@{
    ViewData["Title"] = "RegisterNewUserView";
    Layout = "~/Views/Shared/Master.cshtml";
}

@using (Html.BeginForm("RegisterNewUser", "User", FormMethod.Post))
{
    <table>
        <tr>
            <td> Name : </td>
            <td> @Html.TextBoxFor(x => x.UserName)</td>
        </tr>
        <tr>
            <td> Contact : </td>
            <td> @Html.TextBoxFor(x => x.UserContact)</td>
        </tr>
        <tr>
            <td> Email : </td>
            <td> @Html.TextBoxFor(x => x.UserEmail)</td>
        </tr>
        <tr>
            <td> Password : </td>
            <td> @Html.PasswordFor(x => x.UserEncyryptedKey)</td>
        </tr>
        <tr>
            <td> Secret Message : </td>
            <td> @Html.PasswordFor(x => x.UserEncryptionMessage)</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Submit</button>
            </td>
        </tr>
    </table>
}
