@model AdventureTourManagement.ViewModels.VmUser

@{
    ViewData["Title"] = "RegisterNewUserView";
    Layout = "~/Views/Shared/Master.cshtml";
}


@using (Html.BeginForm("RegisterNewUser", "User", FormMethod.Post))
{
    <div class="form-group row">
        <label for="UserName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", required="required" })

        </div>
    </div>

    <div class="form-group row">
        <label for="UserContact" class="col-sm-2 col-form-label">Contact</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UserContact, new { @class = "form-control", @placeholder = "08********", required="required" })
        </div>
    </div>

    <div class="form-group row">
        <label for="UserEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control", @type = "email", @placeholder = "name@domain.com", required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <label for="UserEncyryptedKey" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(x => x.UserEncyryptedKey, new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <label for="UserEncryptionMessage" class="col-sm-2 col-form-label">Secret Message</label>
        <div class="col-sm-10">
            @Html.PasswordFor(x => x.UserEncryptionMessage, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
