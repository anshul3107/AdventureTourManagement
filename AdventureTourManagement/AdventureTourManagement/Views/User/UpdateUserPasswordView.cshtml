@model AdventureTourManagement.ViewModels.VmUser

@{
    ViewData["Title"] = "UpdateUserPasswordView";
    Layout = "~/Views/Shared/Master.cshtml";
}


@using (Html.BeginForm("UpdateUserPassword", "User", FormMethod.Post, new {@style="width: 40%"}))
{
    @Html.HiddenFor(x=>x.DecryptedUserEmail)
    <div class="form-group row">
        <label for="UserEncyryptedKey" class="col-sm-4 col-form-label">Password</label>
        <div class="col-sm-8">
            @Html.PasswordFor(x => x.UserEncyryptedKey,
            new { @class = "form-control", required="required" })
        </div>
    </div>
    <div class="form-group row">
        <label for="UserEncryptionMessage" class="col-sm-4 col-form-label">Secret Message</label>
        <div class="col-sm-8">
            @Html.PasswordFor(x => x.UserEncryptionMessage,
            new { @class = "form-control", required="required" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}




