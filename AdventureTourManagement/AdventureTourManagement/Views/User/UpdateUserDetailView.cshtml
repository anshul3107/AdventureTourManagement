
@model AdventureTourManagement.ViewModels.VmUser

@{
    ViewData["Title"] = "UpdateUserDetailView";
    Layout = "~/Views/Shared/Master.cshtml";
}


@using (Html.BeginForm("UpdateUserDetail", "User", FormMethod.Post,
new {@style="width: 40%"}))
{
    @Html.HiddenFor(x => x.DecryptedUserEmail)
    <div class="form-group row">
        <label for="UserName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UserName,
            new { @class = "form-control", required="required" })
        </div>
    </div>
    <div class="form-group row">
        <label for="UserContact" class="col-sm-2 col-form-label">Contact</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UserContact,
            new { @class = "form-control", required="required" })
        </div>
    </div>
    <div class="form-group row">
        <label for="DecryptedUserEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.DecryptedUserEmail,
            new { @class = "form-control", required="required", @readonly="readonly" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}