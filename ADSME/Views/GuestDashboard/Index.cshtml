@model ADSM.ViewModels.VMActivity

@{
    ViewBag.Title = "Guest Dashboard";
}

<h2>Activity Trends</h2>

<table>
    <tr>
        <td colspan="3">
            <h3> Recommended Activities </h3>
        </td>
    </tr>
    <tr>
        @{
            var data = Model.Activities;

            if (data != null)
            {
                if (data.Any(x => x.Key == "RA"))
                {
                    var raData = data["RA"];

                    foreach (var item in raData)
                    {
                        <td>
                            @Html.ActionLink(item.activity_name, "FetchActivity", new { activity_id = item.activity_id });
                        </td>
                    }
                }
            }
        }
    </tr>
    <tr>
        <td colspan="3">
            <h3> Seasonal Activities </h3>
        </td>
    </tr>
    <tr>

        @{
            if (data != null)
            {
                if (data.Any(x => x.Key == "SA"))
                {
                    var raData = data["SA"];

                    foreach (var item in raData)
                    {
                        <td>
                            @Html.ActionLink(item.activity_name, "FetchActivity", new { item.activity_id });
                        </td>
                    }
                }
            }
        }
    </tr>

    <tr>
        <td colspan="3">
            <h3> Recently Bought Activities </h3>
        </td>
    </tr>
    <tr>
        @{
            if (data != null)
            {
                if (data.Any(x => x.Key == "RB"))
                {
                    var raData = data["RB"];

                    foreach (var item in raData)
                    {
                        <td>
                            @Html.ActionLink(item.activity_name, "FetchActivity", new { item.activity_id });
                        </td>
                    }
                }
            }
        }
    </tr>
</table>


