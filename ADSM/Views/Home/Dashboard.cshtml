        //});

    });

    $('#Region').change(function () {

        var ActivityId = $('#Activities').val();

        if ($('#Region').val() != 0) {

            $.ajax({
            type: "POST",
            url: "/Home/ActivityInfo?id" + ActivityId,
            async: false,
            data: { id: ActivityId},
                success: function (obj) {
                    alert("Works from controller");
                    alert("Worked");
                    $('#DataGrid').show(obj);

            }
        });
        }
    });




    </script>

